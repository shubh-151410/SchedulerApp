<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bgg"
        android:alpha="0.6"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="Select Your Preference For The Places You Want To Travel."
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="56dp"
        android:textColor="@android:color/black" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:layout_marginStart="44dp"
        android:layout_marginTop="55dp"
        android:text="Water Parks"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title.Media"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton"
        android:layout_below="@+id/radioButton"
        android:text="Holy Place"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title.Media"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton2"
        android:layout_below="@+id/radioButton2"
        android:text="Monuments"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title.Media"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton3"
        android:layout_below="@+id/radioButton3"
        android:text="Shopping Centers"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title.Media"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton4"
        android:layout_below="@+id/radioButton4"
        android:text="Museums"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title.Media"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <RadioButton
        android:id="@+id/radioButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton5"
        android:layout_below="@+id/radioButton5"
        android:text="Zoo / Circus"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title.Media"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:text="Next" />

</RelativeLayout>